<p id="notice"><%= notice %></p>

<h1>Interest Areas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interest_areas.each do |interest_area| %>
      <tr>
        <td><%= link_to 'Show', interest_area %></td>
        <td><%= link_to 'Edit', edit_interest_area_path(interest_area) %></td>
        <td><%= link_to 'Destroy', interest_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

